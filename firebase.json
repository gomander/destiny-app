{
  "hosting": {
    "public": "client/dist/spa",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api",
        "run": {
          "serviceId": "api",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "api",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/api/**",
        "headers": [{
          "key": "Cache-Control",
          "value": "no-store"
        }]
      },
      {
        "source": "*.html",
        "headers": [ {
          "key": "Cache-Control",
          "value": "no-cache"
        } ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=1209600"
        } ]
      },
      {
        "source": "**/*.@(png|svg|woff|woff2|mp3)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=5184000"
        } ]
      }
    ]
  }
}
