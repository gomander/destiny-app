{
  "name": "darci-server",
  "version": "1.0.0",
  "description": "Express backend for DARCI.gg",
  "author": "Gunnar Omander <gunnar@gomander.dev>",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "dev": "cross-env NODE_ENV=dev nodemon src/app.ts",
    "build": "cross-env NODE_ENV=prod tsc && npm run copy-package && npm run copy-docker && npm run copy-env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "npm run build",
    "deploy": "deploy-prod.bat",
    "copy-package": "copy package*.json dist || cp package*.json dist",
    "copy-docker": "copy Dockerfile dist || cp Dockerfile dist",
    "copy-env": "copy .env* dist || cp .env* dist"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.8.0",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  }
}
